    private void BotaoIGUALActionPerformed(java.awt.event.ActionEvent evt) {                                           
        valor2 = Double.parseDouble(txtVisor.getText());
        switch(operacao){
            case "somar":
                resultado = valor1 + valor2;
                txtVisor.setText(String.valueOf(resultado));
            break; 
            
            case "sub":
                resultado = valor1 - valor2;
                txtVisor.setText(String.valueOf(resultado));
            break;
            
            case "div":
                resultado = valor1 / valor2;
                txtVisor.setText(String.valueOf(resultado));
            break;
           
            case "mult":
                resultado = valor1 * valor2;
                txtVisor.setText(String.valueOf(resultado));
            break;

        }

    }                                          

    private void BotaoN3ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        txtVisor.setText(txtVisor.getText() + "3");
    }                                       

    private void BotaoMaisActionPerformed(java.awt.event.ActionEvent evt) {                                          
        valor1 = Double.parseDouble(txtVisor.getText());
        operacao = "somar";
        txtVisor.setText("");
        
    }                                         

